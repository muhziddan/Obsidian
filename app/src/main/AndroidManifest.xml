<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.obsidian">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_obsidianlegacyonly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_obsidian_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Obsidian">
        <activity android:name=".SplashScreenActivity" android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutActivity" />
        <activity android:name=".RocksDetailActivity" />
        <activity android:name=".MainActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>